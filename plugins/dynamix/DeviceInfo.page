function testUpdate(init) {
  $.post('/webGui/include/SmartInfo.php',{cmd:'update',port:'<?=$dev?>',name:'<?=$disk['name']?>'},function(data) {
    $('#test_result').html(data);
    if (data.indexOf('%')>=0) {
