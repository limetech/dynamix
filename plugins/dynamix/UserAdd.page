<script>
var path = '/boot/config/plugins/dynamix/users';
var filename = '';

function restore() {
  $('#dropbox').html("<?=$void?>");
  filename = '';
}

function upload() {
  var username = document.user_edit.userName.value.trim();
  if (username && filename) $.post("/webGui/include/FileUpload.php",{cmd:'save',filename:filename,path:path,output:username});
}

function checkUsername(form) {
  var username = form.userName.value.trim();
  if (username.length==0) {
    alert('Please enter a user name.');
    return false;
  }
  if (username.match('[A-Z]| ')) {
    alert('Invalid user name "'+username+'" specified\n\nDo not use uppercase or space characters.');
    return false;
  }
  if (username.match('^(disk[0-9]+|cache[0-9]*|flash)$')) {
    alert('Invalid user name "'+username+'" specified\n\nDo not use reserved names.');
    return false;
  }
  return true;
}

$(function(){
  var dropbox = $('#dropbox');
  dropbox.filedrop({
    maxfiles:1,
    maxfilesize:20, // KB
    url:'/webGui/include/FileUpload.php',
    data:{path:path},
    beforeEach:function(file) {
      if (!file.type.match(/^image\/png/)) {
        alert('Only PNG images are allowed!');
        return false;
      }
    },
    error: function(error, file) {
      switch (error) {
      case 'BrowserNotSupported':
        alert('Your browser does not support HTML5 file uploads!');
        break;
      case 'TooManyFiles':
        alert('Too many files!\n\nPlease select one file only!');
        break;
      case 'FileTooLarge':
        alert('File "'+file.name+'" is too large!\n\nPlease upload files up to 20 kB.');
        break;
      }
    },
    uploadStarted:function(i,file,count) {
      var image = $('img', $(dropbox));
      var reader = new FileReader();
      image.width = 48;
      image.height = 48;
      reader.onload = function(e){image.attr('src',e.target.result);};
      reader.readAsDataURL(file);
    },
    uploadFinished:function(i,file,response) {
      if (response == '200 OK') {
        if (!filename) $(dropbox).append("<?=$icon?>");
        $('input[name="userDesc"]').trigger('change');
        filename = file.name;
      } else {
        alert(response);
      }
    }
  });
  $('#drop').bind('change', function(e) {
    var files = e.target.files;
    $('#dropbox').trigger({type:'drop',dataTransfer:{files:files}});
  });
});
</script>

