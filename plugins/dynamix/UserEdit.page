<script>
var path = '/boot/config/plugins/dynamix/users';
var filename = '';

function restore() {
  // restore original image and activate APPLY button
  $('#dropbox').html("<?=$void?>");
  $('input[name="userDesc"]').trigger('change');
  filename = 'reset';
}

function upload(remove) {
  // gets invoked when the user clicks APPLY, at this point image will be saved or deleted
  if (remove || filename=='reset') {$.post("/webGui/include/FileUpload.php",{cmd:'delete',filename:filename,path:path,output:"<?=$name?>"}); return;}
  if (filename) {
    $.post("/webGui/include/FileUpload.php",{cmd:'save',filename:filename,path:path,output:"<?=$name?>"});
    $.cookie('refresh','1',{path:'/'});
  }
}

function done_plus() {
  // this is a two step approach...
  // first, the current screen is updated when user clicks APPLY (browser is instructed to reload the image).
  // second, user has to click DONE to propagate the new image onto other pages (browser is forced to reload the page).
  if ($.cookie('refresh')=='1') $.cookie('refresh','init',{path:'/'});
  done();
}

$(function(){
  // appending a time dummy will make the browser think/realize the image has changed
  $('#image').attr('src', $('#image').attr('src')+'?t='+new Date().getTime());
  var dropbox = $('#dropbox');
  // attach the drag-n-drop feature to the 'dropbox' element
  dropbox.filedrop({
    maxfiles:1,
    maxfilesize:96, // KB
    url:'/webGui/include/FileUpload.php',
    beforeEach:function(file) {
      if (!file.type.match(/^image\/png/)) {
        alert('Only PNG images are allowed!');
        return false;
      }
    },
    error: function(error, file, i) {
      switch (error) {
      case 'BrowserNotSupported':
        alert('Your browser does not support HTML5 file uploads!');
        break;
      case 'TooManyFiles':
        alert('Too many files!\n\nPlease select one file only!');
        break;
      case 'FileTooLarge':
        alert('File "'+file.name+'" is too large!\n\nPlease upload files up to 96 kB.');
        break;
      }
    },
    uploadStarted:function(i,file,count) {
      var image = $('img', $(dropbox));
      var reader = new FileReader();
      image.width = 48;
      image.height = 48;
      reader.onload = function(e){image.attr('src',e.target.result);};
      reader.readAsDataURL(file);
    },
    uploadFinished:function(i,file,response) {
      if (response == '200 OK') {
        if (!filename || filename=='reset') $(dropbox).append("<?=$icon?>");
        $('input[name="userDesc"]').trigger('change');
        filename = file.name;
      } else {
        alert(response);
      }
    }
  });
  // simulate a drop action when manual file selection is done
  $('#drop').bind('change', function(e) {
    var files = e.target.files;
    if ($('#dropbox').triggerHandler({type:'drop',dataTransfer:{files:files}})==false) e.stopImmediatePropagation();
  });
});
</script>

